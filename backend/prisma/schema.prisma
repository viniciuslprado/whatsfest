

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Festa {
  id              Int      @id @default(autoincrement())
  nome            String
  data            DateTime? // Data do evento - Opcional
  horaInicio      String?   // Horário de início (formato HH:mm) - Opcional
  horaFim         String?   // Horário de fim (formato HH:mm) - Opcional
  cidade          String   // Para filtragem por geolocalização
  local           String?  // Nome do local (Clube X, Avenida Y) - Opcional
  descricaoCurta  String?  // Texto de chamada para o calendário - Opcional
  linkVendas      String?  // O '?' indica que este campo é opcional (pode ser NULO no DB)
  destaque        Boolean  @default(false) // Para o flyer principal no topo da página
  criadoEm        DateTime @default(now())
}

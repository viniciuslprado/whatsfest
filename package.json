{
  "name": "whatsfest-monorepo",
  "version": "1.0.0",
  "description": "WhatsFest Event Calendar - Frontend deployed on Vercel, Backend on Render",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "vercel-build": "cd frontend && npm run build",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build"
  },
  "keywords": ["events", "calendar", "react", "node"],
  "author": "viniciuslprado",
  "license": "MIT"
}